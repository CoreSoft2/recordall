{
  "name": "recordall",
  "version": "0.0.1",
  "description": "Simple and powerful chrome extension to record screens",
  "main": "src/js/main.js",
  "contributors": [
    "Igor Lu√≠z <igor@devstacks.com.br>"
  ],
  "scripts": {
    "start": "npm-run-all --parallel build gulp-tasks",
    "gulp-tasks": "gulp",
    "build": "npm run browserify && npm run uglify",
    "browserify": "watchify -vd -p browserify-hmr -e src/js/app.js -o app/dist/app.js",
    "uglify": "uglifyjs dist/angulado.js -o dist/angulado.min.js"
  },
  "keywords": [
    "stackrec",
    "screencast",
    "record",
    "screen"
  ],
  "license": "MIT",
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-sass": "^2.3.2"
  }
}
